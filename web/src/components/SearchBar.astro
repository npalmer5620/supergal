---
interface Props {
  placeholder?: string;
  onSubmit?: string;
}

const { placeholder = 'Search posts and galleries...' } = Astro.props;
---

<form method="GET" action="/search" class="w-full max-w-md">
  <div class="relative">
    <input
      type="text"
      name="q"
      placeholder={placeholder}
      class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent"
      required
    />
    <button
      type="submit"
      class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-900 transition-colors"
    >
      <svg
        class="w-5 h-5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
        />
      </svg>
    </button>
  </div>
</form>
