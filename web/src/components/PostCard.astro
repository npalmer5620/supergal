---
import { formatDate } from '../utils/markdown';

interface Props {
  title: string;
  slug: string;
  excerpt?: string;
  createdAt: string;
  readingTime?: number;
}

const { title, slug, excerpt, createdAt, readingTime = 5 } = Astro.props;
---

<article class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-md transition-shadow">
  <div class="p-6">
    <h3 class="text-xl font-semibold text-gray-900 mb-2">
      <a href={`/blog/${slug}`} class="hover:text-gray-600 transition-colors">
        {title}
      </a>
    </h3>

    <div class="flex items-center gap-4 text-sm text-gray-600 mb-4">
      <time datetime={createdAt}>
        {formatDate(createdAt)}
      </time>
      <span>{readingTime} min read</span>
    </div>

    {excerpt && (
      <p class="text-gray-600 mb-4 line-clamp-3">
        {excerpt}
      </p>
    )}

    <a
      href={`/blog/${slug}`}
      class="inline-block text-gray-900 font-medium hover:text-gray-600 transition-colors"
    >
      Read More â†’
    </a>
  </div>
</article>
